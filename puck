package basicgraphics;

import basicgraphics.images.Picture;
import java.io.IOException;


public class Puck extends Sprite
{
    
    
        public Picture puck;
        SpriteComponent sc;
        
        public void piece(SpriteComponent sc) throws IOException
        {
            puck = new Picture("UnguardedBoss.png");
            setPicture(puck);
            setX(900);
            setY(500);
            setVelX(0);
            setVelY(0);
            this.sc = sc;
            sc.addSprite(this);
        }
    
        
}
