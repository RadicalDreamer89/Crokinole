package basicgraphics;

import basicgraphics.*;
import basicgraphics.images.Picture;
import java.awt.*;
import java.util.*;


public class Board extends Sprite
{
    SpriteComponent sc;
    
    //Draws the rings of the gameboard.
    public void gameBoard(SpriteComponent sc, int height, int width)
    {
        Color Brown = new Color(172,138,115);
        
        Image im1 = BasicFrame.createImage(width, height);
        Graphics imgr = im1.getGraphics();
        imgr.setColor(Color.BLACK);
        imgr.drawOval(323, 0, width, height);
        Picture rim = new Picture(im1);
        setPicture(rim);
        this.sc = sc;
        sc.addSprite(this);
    }
    
}
