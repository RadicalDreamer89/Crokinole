package basicgraphics;

import basicgraphics.images.Picture;
import java.io.IOException;

public class HitBar extends Sprite
{
     public Picture bar;
        public SpriteComponent comp;
        
        public void charger(SpriteComponent comp) throws IOException
        {
            bar = new Picture("down.png");
            setPicture(bar);
            setX(930);
            setY(499);
            setVelX(0);
            setVelY(0);
            this.comp = comp;
            comp.addSprite(this);
        }
}
