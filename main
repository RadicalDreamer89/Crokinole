package basicgraphics;

import basicgraphics.*;
import basicgraphics.BasicFrame;
import basicgraphics.images.Picture;
import java.util.*;
import java.io.IOException;
import java.awt.*;
import java.awt.event.KeyAdapter;
import java.awt.event.KeyEvent;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowListener;
import javax.swing.JFrame;
import javax.swing.JOptionPane;
import java.awt.event.MouseEvent;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseListener;
import javafx.scene.shape.Circle;

/**
 *
 * @author Warren "Not Wayne" Douglas, wdougl6
 * @since 29th March, 2018
 */
public class Crokinole 
{   
    public static void main (String [] args) throws IOException
    {
        BasicFrame bf = new BasicFrame("Crokinole!");
        final Container cont = bf.getContentPane();
        final Color Brown = new Color(172,138,115);
        final SpriteComponent sc = new SpriteComponent(){
            @Override
            public void paintBackground(Graphics g) {
                Dimension d = getSize();
                g.setColor(Brown);
                g.fillRect(0, 0, d.width, d.height);

                }
            };
        
        
        
        
        
        
        
        MouseListener ml = new MouseListener()
        {
            @Override
            public void mouseClicked(MouseEvent e) {
                int x, y;
                x = e.getX();
                y = e.getY();
                
                JOptionPane.showMessageDialog(sc, "Coordinates: X -" + x + " Y - " + y);
            }

            @Override
            public void mousePressed(MouseEvent e) {
            }

            @Override
            public void mouseReleased(MouseEvent e) {
            }

            @Override
            public void mouseEntered(MouseEvent e) {
            }

            @Override
            public void mouseExited(MouseEvent e) {
            }
        };
        sc.addMouseListener(ml);
        
        
        
        sc.setPreferredSize(new Dimension (1920,1080));
        
        
        
        bf.add("Crokinole!", sc, 0, 0, 1, 1);
        
       
       final Puck p = new Puck();
       final HitBar b = new HitBar();
       final Board bo = new Board();
       
     
        
       bf.addKeyListener(new KeyAdapter()
        {
            
            @Override
            public void keyPressed(KeyEvent ke)
            {
                switch (ke.getKeyCode()) 
                {
                    case KeyEvent.VK_UP:
                        p.setVelY(p.getVelY() - 0.2);
                        break;
                    case KeyEvent.VK_RIGHT:
                        p.setVelX(p.getVelX() + 0.2);
                        bo.setVelX(p.getVelX() + 0.2);
                        break;
                    case KeyEvent.VK_LEFT:
                        p.setVelX(p.getVelX() - 0.2);
                        break;
                    default:
                        break;
                }
            }
                
        });    
       
        
        bf.show();
        bo.gameBoard(sc, sc.getHeight()-75, sc.getHeight());
        p.piece(sc);
        
        sc.start(0,10);
        
        
    }
}
