public class Crokinole 
{   
    public static void main (String [] args) 
    {
        BasicFrame bf = new BasicFrame("Crokinole!");
        final Container cont = bf.getContentPane();
        final Color Brown = new Color(172,138,115);
        final int CIRCLES = 3;
        int circStartX = 323;
        int circStartY = 0;
        int puckCountP = 12;
        int puckCountG = 12;
        
        final SpriteComponent sc = new SpriteComponent(){
            @Override
            public void paintBackground(Graphics g) {
                Dimension d = getSize();
                g.setColor(Brown);
                g.fillRect(0, 0, d.width, d.height);

                }
            };
        
        
        
        
        
        
        MouseListener ml = new MouseListener()
        {
            @Override
            public void mouseClicked(MouseEvent e) {
                int x, y;
                x = e.getX();
                y = e.getY();
                
                JOptionPane.showMessageDialog(sc, "Coordinates: X -" + x + " Y - " + y);
            }

            @Override
            public void mousePressed(MouseEvent e) {
            }

            @Override
            public void mouseReleased(MouseEvent e) {
            }

            @Override
            public void mouseEntered(MouseEvent e) {
            }

            @Override
            public void mouseExited(MouseEvent e) {
            }
        };
        sc.addMouseListener(ml);
        
        
        
        sc.setPreferredSize(new Dimension (1500,900));
        
        
        
        bf.add("Crokinole!", sc, 0, 0, 1, 1);
        
       
       Puck pP = new Puck();
       Puck pG = new Puck();
       Board bo = new Board();
       Board ba = new Board();
       Board bu = new Board();
       final Board bi = new Board();
       
     
        
       bf.addKeyListener(new KeyAdapter()
        {
            
            @Override
            public void keyPressed(KeyEvent ke)
            {
                switch (ke.getKeyCode()) 
                {
                    case KeyEvent.VK_UP:
                        bi.setVelX(1.5);
                        break;
                    case KeyEvent.VK_RIGHT:
                        
                        break;
                    case KeyEvent.VK_LEFT:
                        
                        break;
                    default:
                        break;
                }
            }
                
        });    
       
        
        bf.show();
        bo.gameBoard(sc, circStartX, circStartY, sc.getHeight(), sc.getHeight());
        ba.gameBoard(sc, circStartX + 170, circStartY + 180, sc.getHeight() - 350, sc.getHeight() - 350);
        bu.gameBoard(sc, circStartX + 293, circStartY + 302, sc.getHeight() - 600, sc.getHeight() - 600);
        bi.gameBoard(sc, circStartX + 422, circStartY + 432, sc.getHeight() - 860, sc.getHeight() - 860);


//        pP.pieceP(sc);
//        pG.pieceG(sc);
        
        sc.start(0,10);
        
        
    }
}
