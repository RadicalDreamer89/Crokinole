 */

public class Crokinole 
{
    static String[][] layout = {
        {"leftTop","game","game"},
        {"leftTop","game","game"},
        {"leftBot","game","game"},
        {"leftBot","game","game"},
    };
    
    public static void main(String[] args) {
        BasicFrame bf = new BasicFrame("Crokinole!");
        final Container cont = bf.getContentPane();
        final Color Brown = new Color(172, 138, 115);
        int puckCountP = 12;
        int puckCountG = 12;
        Team Purple;
        Team Gold;
        
       
        
        final SpriteComponent sc = new SpriteComponent() {
            @Override
            public void paintBackground(Graphics g) {
                Dimension d = getSize();
                g.setColor(Brown);
                g.fillRect(0, 0, d.width, d.height);

            }
        };

        final Puck pP = new Puck();
        final Puck pG = new Puck();
        Board bo = new Board();

        
        MouseListener ml = new MouseListener() 
        {
            int force= 0; 
            int start;
            int end;
            
            @Override
            public void mouseClicked(MouseEvent e) 
            {
//                int x, y;
//                x = e.getX();
//                y = e.getY();
//
//                JOptionPane.showMessageDialog(sc, "Coordinates: X -" + x + " Y - " + y);
//                
                
            }

            
            @Override
            public void mousePressed(MouseEvent e) 
            {
                start = e.getY() + e.getX();
            }

            @Override
            public void mouseReleased(MouseEvent e) 
            {
                
                end = e.getY() + e.getX();
                force = end - start;
                pP.setVelX(-Math.abs(force/2));
                pP.setVelY(-Math.abs(force/2));
                
                
                       
                
            }

            @Override
            public void mouseEntered(MouseEvent e) {
            }

            @Override
            public void mouseExited(MouseEvent e) {
            }
        };
        sc.addMouseListener(ml);

        sc.setPreferredSize(new Dimension(1920, 1000));

        bf.add("Crokinole!", sc, 0, 0, 1, 1);


        
        final Dimension d = sc.getSize();
        final int radius = (int)(Math.min(d.getHeight(),d.getWidth()) / 2);
        
        bf.addKeyListener(new KeyAdapter() {

            @Override
            public void keyPressed(KeyEvent ke) {
                switch (ke.getKeyCode()) {
                    
                    
                        
                    case KeyEvent.VK_UP:
                        
                        break;
                    case KeyEvent.VK_RIGHT:
                        pP.moveRight();
                        break;
                    case KeyEvent.VK_LEFT:
                        pP.moveLeft();
                        break;
                    default:
                        break;
                }
            }

        });

        bf.show();
        bo.gameBoard(sc, sc.getWidth(), sc.getHeight());
//        ba.partition(sc);
        pP.pieceP(sc);
//        pG.pieceG(sc);
        sc.start(0,10);

    }
}
